<main class="wrapper__home">
  <div class="welcome-container home">
    {{> _navbar_main }}
  </div>

  <!-- profile section -->
  <div class="profile-section home">
    <!-- profile -->
    <div class="profile-section__contain">
      {{> _profile_info }}

      <!-- edit profile -->

      <table class="profile-section__interact">
        <tr>
          <th><a href="#">🔥 Posts</a></th>
          <td id="">{{data.postcount}}</td>
        </tr>
        
        <tr> 
          <th>📥 Messages</th>
          <td id="">{{data.messagecount}}</td>
        </tr>

        <tr class="profile-section__interact--likes">
          <th>👍 Likes</th>
          <td id="">{{data.likes}}</td>
        </tr>

        <tr>
          <th><a href="#">👾 Edit Profile</a></th>
        </tr>
      </table>

      <!-- ./END-edit profile -->
    </div>
    <!-- ./END-profile -->

    <!-- question section -->
    <div class="profile-section__contain question">
      <h1 class="question-section__heading">What's your question today?</h1>
      {{> _question_form }}
      <hr />
      {{> _discussions }}
    </div>
    <!-- ./END-question section -->
  </div>
  <!-- ./-END-profile section -->
</main>
